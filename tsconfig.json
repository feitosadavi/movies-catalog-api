{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "strictPropertyInitialization": true,
    // "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDirs": [
      "src",
      "tests"
    ],
    "baseUrl": "src",
    "paths": {
      "@tests/*": [
        "../tests/*"
      ],
      "@/*": [
        "*"
      ],
      // "@app/*": [
      //   "src/*"
      // ]
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": []
}