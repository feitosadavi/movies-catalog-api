{
  "name": "movies-catalog-api",
  "version": "1.0.0",
  "description": "An API for a catalog of movies",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/' --exec \"ts-node-dev -r tsconfig-paths/register src/main/server.ts\" -e ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "NODE_ENV=production node dist/main/server.js",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:coverage": "npm test -- --coverage",
    "test:unit": "npm test -- --watchAll -c jest.unit.config.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.4.6",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.0.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^28.1.6",
    "@types/module-alias": "^2.0.1",
    "@types/mongoose": "^5.11.97",
    "jest": "^28.1.3",
    "jest-mock-extended": "^2.0.7",
    "mockdate": "^3.0.5",
    "mongodb-memory-server": "^8.8.0",
    "nodemon": "^2.0.19",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
